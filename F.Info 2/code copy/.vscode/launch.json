{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ejecutar EXE",
            "type": "cppdbg",  // Usa el tipo adecuado (en este caso cppdbg para C++)
            "request": "launch",
            "program": "${workspaceFolder}/ejecutables/archivo.exe",  // Ruta del ejecutable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb",  // Cambia si usas otro debugger
            "setupCommands": [
                {
                    "description": "Habilitar el seguimiento de la variable de depuraci√≥n",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "externalConsole": true
        }
    ]
}
